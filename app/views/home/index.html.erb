<div class="container" style="margin-top:50px"> 
    <form action="/write" method="POST">
      <div class="form-group">
        <label for="exampleInputEmail1">글자 수 세기</label>
        <input type="text" name="title" class="form-control" id="exampleInputEmail1" placeholder="글을 입력하세요">
      </div>
      
      <button type="submit" class="btn btn-default">제출</button>
    </form>
    
    <% @posts.each do |p| %>
        <div class="well">
    
            <strong><%= p.title %></strong>
            
        <div class="container">
          <p>공백포함 글자수[<%= p.title.length %>]</p>
          <p>공백제외 글자수[<%= (p.title.length ) -   (p.title.count" ") %>]</p>
        </div>
          
            <a href="/destroy/<%= p.id %>">[삭제]</a>
        </div>
    <% end %>
</div>